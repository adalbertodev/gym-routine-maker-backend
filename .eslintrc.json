{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", "never"],
        "require-await": "error",
        "arrow-parens": "error",
        "arrow-spacing": ["error", {"before": true, "after": true}]
    }
}
